@using Web.Controllers
@using Web.HtmlHelpers
<!DOCTYPE html>
<html ng-app="messaging">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Messaging</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
                @(Html.ActionLink<MessagingController>("Messaging", n => n.Index(), null, new { @class = "navbar-brand" }))
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Messaging</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", false)
    <script>
        //todo:move this shit
        $('.pagination a').click(function() {
            var link = $(this);
            var page = link.data("page");
            var input = $(link.parents('.pagination')[0]).prev();
            $(input).val(page);
            link.parents('form').submit();
        });

        $('.submitonenter').keydown(function(event) {
            if (event.keyCode == 13) {
                this.form.submit();
            }
            return true;
        });

        $('.tablesorting thead tr th').click(function () {
            var columnKey = $(this).data('key');
            var sortingDirectionInput = $($(this).parents('table').prev());
            var sortingColumnInput = $(sortingDirectionInput.prev());

            if (sortingColumnInput.val() != columnKey) {
                sortingDirectionInput.val('Asc');
            } else {
                if (sortingDirectionInput.val() != 'Asc')
                    sortingDirectionInput.val('Asc');
                else
                    sortingDirectionInput.val('Desc');
            }
            sortingColumnInput.val(columnKey);
            $(this).parents('form')[0].submit();
        });
    </script>
    <style>
        .tablesorting thead tr th {
            cursor: pointer;
        }
    </style>
</body>
</html>
